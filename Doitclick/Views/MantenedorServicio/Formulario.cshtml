@{
    ViewData["Title"] = "Ingreso de Servicios";
}
<form id="frm-ingreso-servicios">
    <div class="row">
        <div class="col-lg-12">
            <div id="demo-panel-network" class="panel">
                <div class="panel-heading">
                    <div class="panel-control">
                        <button id="demo-panel-network-refresh" class="btn btn-default btn-active-primary" data-toggle="panel-overlay" data-target="#demo-panel-network"><i class="demo-psi-repeat-2"></i></button>
                        <div class="dropdown">
                            <button class="dropdown-toggle btn btn-default btn-active-primary" data-toggle="dropdown" aria-expanded="false"><i class="demo-psi-dot-vertical"></i></button>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li><a href="#">Action</a></li>
                                <li><a href="#">Another action</a></li>
                                <li><a href="#">Something else here</a></li>
                                <li class="divider"></li>
                                <li><a href="#">Separated link</a></li>
                            </ul>
                        </div>
                    </div>
                    <h3 class="panel-title">
                        <ol class="breadcrumb">
                            <li><a><i class="demo-pli-home"></i></a></li>
                            <li class="active">Ingreso de Servicios</li>
                        </ol>
                    </h3>
                </div>
                <div class="panel-body">


                    <div class="row">
                        <div class="col-sm-2 col-md-2">
                            <label for="x">Código de Servicio</label>
                            <div class="input-group mar-btm">
                                <span class="input-group-addon"><i class="demo-pli-male"></i></span>
                                <input type="text" id="CodigoServicio" name="CodigoServicio" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <label for="x">Nombre de Servicio</label>
                            <div class="input-group mar-btm">
                                <span class="input-group-addon"><i class="demo-pli-list-view"></i></span>
                                <input type="text" id="NombreServicio" name="NombreServicio" class="form-control">
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <label for="x">Descripción</label>
                            <div class="input-group mar-btm">
                                <textarea id="DescripcionServicio" name="DescripcionServicio" rows="9" class="form-control" placeholder="Ingresar descripción de servicio solicitado" style="width: 286px; height: 43px;"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <label for="x">Mano de Obra $</label>
                            <div class="input-group mar-btm">
                                <span class="input-group-addon"><i class="demo-pli-add-user-star"></i></span>
                                <input type="text" id="VManoObra" name="VManoObra" class="form-control">
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <label for="x">Valor Mano de Obra</label>
                            <div class="input-group mar-btm">
                                <span class="input-group-addon"><i class="demo-pli-mail"></i></span>
                                <input type="text" id="ValorMateriales" name="ValorMateriales" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <label for="x">Materiales $</label>
                            <div class="input-group mar-btm">
                                <span class="input-group-addon"><i class="demo-pli-add-user-star"></i></span>
                                <input type="text" id="ValorComision" name="ValorComision" class="form-control">
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                           *<label for="x">Total</label>
                            <div class="input-group mar-btm">
                                <span class="input-group-addon"><i class="demo-pli-mail"></i></span>
                                <input type="text" id="ValorTotal" name="ValorTotal" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <label for="x">Total</label>
                            <div class="input-group mar-btm">
                                <span class="input-group-addon"><i class="demo-pli-add-user-star"></i></span>
                                <input type="text" id="Total" name="Total" class="form-control">
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <label for="x">% Comision</label>
                            <div class="input-group mar-btm">
                                <span class="input-group-addon"><i class="demo-pli-mail"></i></span>
                                <input type="text" id="PorcComision" name="PorcComision" class="form-control">
                            </div>
                        </div>
                    </div>

                    <hr />
                    <div class="row">
                        <div class="col-lg-12">
                            <table id="listado" class="table table-bordered table-hover toggle-circle" data-page-size="15">
                                <thead>
                                    <tr>
                                        <th data-toggle="true">Material</th>
                                        <th data-toggle="true">Unidad Medida</th>
                                        <th data-toggle="true">Precio</th>
                                        <th data-toggle="true">Stock Alerta</th>
                                    </tr>
                                </thead>
                                <tbody id="bodylistar"></tbody>
                            </table>
                        </div>

                        <div class="text-right no-print">
                            <a href="javascript:window.print()" class="btn btn-default"><i class="demo-pli-printer icon-lg"></i></a>
                            <button class="btn btn-primary">Guardar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</form>

@section Scripts{
    <script src="~/Assets/plugins/fooTable/dist/footable.all.min.js"></script>
    <script>

        (function ($) {
            $.fn.serializeFormJSON = function () {

                var o = {};
                var a = this.serializeArray();
                $.each(a, function () {
                    if (o[this.name]) {
                        if (!o[this.name].push) {
                            o[this.name] = [o[this.name]];
                        }
                        o[this.name].push(this.value || '');
                    } else {
                        o[this.name] = this.value || '';
                    }
                });
                return o;
            };
        })(jQuery);



        $(function () {
            $.ajax({
                type: "GET",
                url: "/api/mantenedor/materiales",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {
                    console.log(data);
                    $.each(data, function (i, e) {
                        $("#bodylistar")
                            .append(
                                $("<tr>")
                                    .append($("<td>").append(e.nombre))
                                    .append($("<td>").append(e.unidadMedida))
                                    .append($("<td>").append(e.precioUnidad))
                                    .append($("<td>").append(e.stockAlerta))
                            )


                    });
                },
                failure: function (errMsg) {
                    console.log(errMsg);
                }
            });
            $('#frm-ingreso-servicios').on("submit", function () {
                const model = $(this).serializeFormJSON();
                $.ajax({
                    type: "POST",
                    url: "/api/mantenedor/servicios",
                    data: JSON.stringify(model),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (data) { console.log(data); },
                    failure: function (errMsg) {
                        console.log(errMsg);
                    }
                });

                return false;
            });

        });
    </script>
}